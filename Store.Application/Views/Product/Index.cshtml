@model Store.Application.Models.Product.RegisterProductViewModel

<div class="modal fade" id="rgt-prd-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title ttl-list">Cadastrar Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Partial("_ProductForm")
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-sv-product" class="btn btn-primary float-right">Cadastrar</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h3 class="ttl-list">Lista de Produtos</h3>
        </div>
        <div class="col-lg-6 col-md-6">
            <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#rgt-prd-modal">Cadastrar</button>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <table class="table table-striped table-bordered" id="lst-products">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Categoria do Produto</th>
                        <th scope="col">Ativo</th>
                        <th scope="col">Perecível</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>